{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ESNext"   
        ],
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}